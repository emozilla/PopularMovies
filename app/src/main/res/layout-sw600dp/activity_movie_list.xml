<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal" android:orientation="horizontal"
    android:showDividers="middle" tools:context="net.nanodegree.popularmovies.MovieListActivity">

    <fragment android:id="@+id/movie_list"
        android:name="net.nanodegree.popularmovies.fragments.MovieGridFragment" android:layout_width="0dp"
        android:layout_height="match_parent" android:layout_weight="2"
        tools:layout="@layout/fragment_movie_grid" />

    <FrameLayout android:id="@+id/movie_detail_container" android:layout_width="0dp"
        android:layout_height="match_parent" android:layout_weight="3" />

</LinearLayout>
