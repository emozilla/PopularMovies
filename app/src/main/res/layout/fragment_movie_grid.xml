<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="net.nanodegree.popularmovies.fragments.MovieGridFragment">

    <GridView android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="auto_fit"
        android:columnWidth="149dp"
        android:stretchMode="none"
        android:verticalSpacing="2dp"
        android:horizontalSpacing="2dp"
        android:gravity="center"/>

    <TextView android:id="@android:id/empty" android:layout_width="match_parent"
        android:layout_height="match_parent" android:gravity="center" android:text="@string/movie_grid_no_movies" />

</FrameLayout>