    <TextView
        android:id="@+id/movie_detail_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/movie_detail_poster"
        android:gravity="center_horizontal"/>


    <View style="@style/Divider"
        android:id="@+id/movie_detail_sp1"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:layout_below="@id/movie_detail_overview"/>

    <ListView
        android:id="@+id/movie_detail_cast"
        android:layout_below="@id/movie_detail_sp1"
        android:layout_width="match_parent"
        android:layout_height="65dp" />

    <View style="@style/Divider"
        android:id="@+id/movie_detail_sp2"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:layout_below="@id/movie_detail_cast"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/movie_detail_trailers"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/movie_detail_sp2"
        android:scrollbars="vertical"/>

    <View style="@style/Divider"
        android:id="@+id/movie_detail_sp3"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:layout_below="@id/movie_detail_trailers"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/movie_detail_reviews"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/movie_detail_sp3"
        android:scrollbars="vertical"/>

</RelativeLayout>